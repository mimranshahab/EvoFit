<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/x10dp"
    android:background="@drawable/rounded_box_white"
    android:orientation="vertical"
    android:padding="@dimen/x10dp">


    <edu.aku.ehs.widget.AnyTextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x5dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#414141"
        android:textSize="@dimen/s16"
        app:typeface="@string/font_bold" />


    <ImageView
        android:id="@+id/imgSeperatorLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/x15dp"
        android:background="#E2E2E2" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/x15dp"

        android:layout_weight="1">

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/txtMessage"
            android:layout_width="@dimen/x260dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:minLines="2"
            android:text="message"
            android:textColor="@color/txtBlue"
            android:textSize="@dimen/s14"
            app:typeface="@string/font_regular" />

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/btnButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8dp"
            android:layout_marginRight="@dimen/x8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_box_filled_btn_blue"
            android:gravity="center"
            android:padding="@dimen/x8dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/s14"
            android:visibility="visible"
            app:typeface="@string/font_bold" />

        <edu.aku.ehs.widget.AnyTextView
            android:id="@+id/btnButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8dp"
            android:layout_marginRight="@dimen/x8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_box_filled_btn_amber"
            android:gravity="center"
            android:padding="@dimen/x8dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/s14"
            android:visibility="visible"
            app:typeface="@string/font_bold" />

    </LinearLayout>


</LinearLayout>
