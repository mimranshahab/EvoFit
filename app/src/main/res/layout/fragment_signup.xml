<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_background_evo" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150dp"
                android:padding="@dimen/x10dp"
                android:src="@drawable/img_logo" />


            <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgLogo"
                android:layout_marginLeft="@dimen/x20dp"
                android:layout_marginRight="@dimen/x20dp"
                android:background="#5fff"
                android:paddingBottom="@dimen/x20dp"
                android:paddingLeft="@dimen/x10dp"
                android:paddingRight="@dimen/x10dp"
                android:paddingTop="@dimen/x20dp"
                app:corner_radius="@dimen/x20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/user_icon"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Full Name"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />

                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/c_email"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Email Address"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />


                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/password_icon"
                        android:drawablePadding="@dimen/x5dp"
                        android:inputType="textPassword"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Password"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />


                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/calendar_input_icon"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Birth Date (dd/mm/yyyy)"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />


                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/c_about_menu_icon"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Weight"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />


                    <edu.aku.evofit.widget.AnyEditTextView
                        android:id="@+id/edtHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x5dp"
                        android:background="@drawable/rounded_box"
                        android:drawableLeft="@drawable/c_about_menu_icon"
                        android:drawablePadding="@dimen/x5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Height"
                        android:padding="@dimen/x8dp"
                        android:textSize="@dimen/s14" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <edu.aku.evofit.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x10dp"
                            android:text="Gender"
                            android:textSize="@dimen/s16" />


                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:background="@drawable/rounded_box"
                            android:orientation="horizontal"
                            android:padding="@dimen/x3dp">

                            <RadioButton
                                android:id="@+id/rbMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x25dp"
                                android:text="Male" />

                            <RadioButton
                                android:id="@+id/rbFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female" />


                        </RadioGroup>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <edu.aku.evofit.widget.AnyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x10dp"
                            android:text="Blood Group"
                            android:textSize="@dimen/s16" />


                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"

                            android:background="@drawable/rounded_box"
                            android:orientation="horizontal"
                            android:padding="@dimen/x3dp">

                            <RadioButton
                                android:id="@+id/rbA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x15dp"
                                android:text="A" />

                            <RadioButton
                                android:id="@+id/rbB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x15dp"
                                android:text="B" />

                            <RadioButton
                                android:id="@+id/rbO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="O" />


                        </RadioGroup>

                    </LinearLayout>


                    <edu.aku.evofit.widget.AnyTextView
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/x10dp"
                        android:layout_marginLeft="@dimen/x40dp"
                        android:layout_marginRight="@dimen/x40dp"
                        android:layout_marginTop="@dimen/x10dp"
                        android:background="@drawable/rounded_box_filled_btn_blue"
                        android:gravity="center"
                        android:padding="@dimen/x5dp"
                        android:text="SignUp"
                        android:textColor="@color/c_white"
                        android:textSize="@dimen/s16" />

                </LinearLayout>


            </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


        </RelativeLayout>


    </LinearLayout>


</ScrollView>