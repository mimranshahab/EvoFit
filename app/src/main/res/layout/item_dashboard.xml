<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_margin="@dimen/x5dp"
    android:elevation="@dimen/x5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contParent"
        android:gravity="center"
         android:layout_width="match_parent"
        android:layout_height="@dimen/x120dp">


        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/summary_blue"
            android:alpha="0.3"
            />

        <edu.aku.evofit.widget.AnyTextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Is"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/c_white"
            android:textSize="@dimen/s16"
            app:typeface="@string/font_medium" />


    </RelativeLayout>





</RelativeLayout>